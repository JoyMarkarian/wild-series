{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ program.title }} - Season {{ season.number }}</h1>
    <p>{{ season.description }}</p>
    
    <h2>Episodes</h2>
    <ul>
        {% for episode in episodes %}
        <li><a href="{{ path('program_episode_show', { 'program': program.id, 'season': season.id, 'episode': episode.id }) }}">{{ episode.number }}. {{ episode.title }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}