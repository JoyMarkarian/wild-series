{% extends 'base.html.twig' %}

{% block title %}Liste des acteurs{% endblock %}

{% block body %}
    <h1>Liste des acteurs</h1>
    <ul>
        {% for actor in actors %}
            <li>
                <a href="{{ path('actor_show', {'id': actor.id}) }}">{{ actor.name }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
